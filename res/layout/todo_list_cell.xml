<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/todo_list_cell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/yellow"
        android:text="休假申请审批：Emerson"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/todo_list_cell_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/todo_list_cell_title"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/todo_list_cell_title"
        android:text="17/11/2012" />

    <TextView
        android:id="@+id/todo_list_cell_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/todo_list_cell_title"
        android:layout_below="@+id/todo_list_cell_title"
        android:layout_marginTop="5dp"
        android:text="当前节点：dddd" />

    <TextView
        android:id="@+id/todo_list_cell_information"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todo_list_cell_subtitle"
        android:layout_marginTop="5dp"
        android:background="@color/yellow"
        android:text="说明信息写在这里"
        android:textAppearance="@android:style/TextAppearance.Small.Inverse" />

</RelativeLayout>