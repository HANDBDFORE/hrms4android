<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/todo_listview_selector"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/todo_list_cell_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="这里是错误消息"
        android:visibility="gone" />

    <TextView
        android:id="@+id/todo_list_cell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todo_list_cell_error_message"
        android:layout_marginTop="5dp"
        android:text="休假申请审批：Emerson"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/todo_list_cell_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/todo_list_cell_title"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/todo_list_cell_title"
        android:text="17/11/2012"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/todo_list_cell_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/todo_list_cell_title"
        android:layout_below="@+id/todo_list_cell_title"
        android:layout_marginTop="5dp"
        android:text="当前节点：dddd"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:id="@+id/todo_list_cell_information"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todo_list_cell_subtitle"
        android:layout_marginTop="5dp"
        android:text="说明信息写在这里"
        android:textColor="@color/todo_listview_content_text_color" 
        android:textSize="12sp"/>

    <ProgressBar
        android:id="@+id/todo_list_cell_submit_progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>