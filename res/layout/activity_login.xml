<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >


	<View
	    android:layout_width="match_parent"
	    android:layout_height="200dp"/>
    <LinearLayout
        style="@style/login_input_container"
        android:layout_marginTop="0dp">
        

        <EditText
            android:id="@+id/activity_login_textedit_username"
            style="@style/login_edittext"
            android:background="@drawable/editview_corner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text" 
            android:hint="用户名"
             />
    </LinearLayout>

    <!-- 密码 -->

   <LinearLayout
              style="@style/login_input_container"
        android:layout_marginTop="10dp">



        <EditText
            android:id="@+id/activity_login_textedit_password"
            style="@style/login_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/editview_corner"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:singleLine="true" 
            android:hint="密码"/>
    </LinearLayout>

    <!-- 登录 -->

    <Button
        android:id="@+id/activity_login_textedit_loginButton" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/activity_login_loginbutton_text"
        android:textSize="22sp"
        android:background="@drawable/button_selector"
        android:layout_marginTop="80dp"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"/>
</LinearLayout>