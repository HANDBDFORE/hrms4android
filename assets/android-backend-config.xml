<?xml version="1.0" encoding="UTF-8"?>
<config>
	<application alias="debug" output="false" >
		<activity name="login_activity" >
			<view>
				<title_textview text="汉得移动配置文件" />
			</view>

			<request>
				<url
					name="login_submit_url"
					value="modules/ios/public/login_android.svc" >
				</url>
			</request>
		</activity>
		
		<activity name="function_list_activity" >
			<view>
			</view>

			<request>
				<url
					name="function_query_url"
					value="autocrud/mobile.rs1_0.test.test_mobile_function_center_query/query" />
			</request>
		</activity>
		
		<activity name="todo_list_activity" >
			<view>
				<listview_cell>
					<title_textview text="${record_id}" />
					<date_textview text="${date_limit}" />
					<subtitle_textview text="${node_name}" />
					<information_textview text="${workflow_desc}:${node_name}?${date_limit}" />
				</listview_cell>
			</view>

			<request>
				<url
					name="todo_list_query_url"
					value="autocrud/ios.ios_test.ios_todo_list_test/query?_fetchall=true&amp;_autocount=false" >
					<pk name="record_id" />
					<is_late name="is_late" true_value="1" />
					<detail_page_url_column name="screen_name" />
				</url>
				
				<url
					name="action_submit_url"
					value="modules/ios/ios_test/ios_todo_list_commit.svc" />
			</request>
		</activity>

		<activity name="approve_detail_activity" >
			<view>
				<employee_action_item text="${employee_name}" />
			</view>

			<request>
				<url
					name="action_query_url"
					value="autocrud/ios.ios_test.ios_detail_action_query/query?record_id=${record_id}" />
				<url
					name="employee_card_url"
					value="modules/mobile/hr_lbr_employee.screen?employee_id=${user_id}" />
			</request>
		</activity>

		<activity name="deliver_activity" >
			<view>
				<autocomplete_title text="${unit_name}" />
				<autocomplete_sub_title text="${employee_code}" />
			</view>

			<request>
				<url
					name="employee_query_url"
					value="autocrud/ios.ios_deliver.ios_workflow_deliver_query/query" />
			</request>
		</activity>
	</application>

</config>